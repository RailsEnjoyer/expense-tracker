<h1>Registration</h1>
<%= form_with model: @user, url: signup_path, local: true do |f| %>
  <div class="field">
    <%= f.label :name, "Имя" %><br>
    <%= f.text_field :name, required: true, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email, "Email" %><br>
    <%= f.email_field :email, required: true %>
  </div>
  <div class="field">
    <%= f.label :password, "Пароль" %><br>
    <%= f.password_field :password, required: true %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Подтверждение пароля" %><br>
    <%= f.password_field :password_confirmation, required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться" %>
  </div>
<% end %>
