<h1>Join us!</h1>
<%= form_with model: @user, url: registrations_path do |form| %>
  <%= form.label :email %>
  <%= form.email_field :email %>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation %>
  <%= form.submit "Sign up" %>
<% end %>
<div>
  <%= link_to "Back", root_path %>
</div>