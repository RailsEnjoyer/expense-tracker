<h1>Edit expense</h1>
<%= form_with model: @expense, local: true, turbo: false do |f| %>
  <div>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  <div>
  <div>
    <%= f.label :amount, "Amount" %>
    <%= f.number_field :amount %>
  </div>
  <div>
    <%= f.label :spent_on, "Date of spent" %>
    <%= f.date_field :spent_on %>
  </div>
  <div>
    <%= f.submit "Save" %>
  </div>
<% end %>

<div>
  <%= link_to "Back", root_path %>
</div>